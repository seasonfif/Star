<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="horizontal"
    android:background="?android:selectableItemBackground">

    <com.seasonfif.star.widget.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="2dp"
        android:src="@drawable/avatar_holder"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="2dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/language"
                android:layout_marginRight="10dp"
                android:textColor="@color/colorPrimary_black"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="name"/>

            <TextView
                android:id="@+id/language"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:textColor="@color/colorPrimary_black"
                android:textSize="12dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Java"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/description"
            android:textColor="@color/colorPrimary_black"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxLines="4"
            android:ellipsize="end"
            android:text="description"/>
        <TextView
            android:id="@+id/star_fork"
            android:layout_width="wrap_content"
            android:textColor="@color/colorPrimary_black"
            android:textSize="12dp"
            android:singleLine="true"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:text="star_fork"/>

        <TextView
            android:id="@+id/created_at"
            android:layout_width="wrap_content"
            android:textColor="@color/colorPrimary_black"
            android:textSize="12dp"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content"
            android:text="created_at"/>

        <TextView
            android:id="@+id/update_at"
            android:layout_width="wrap_content"
            android:textColor="@color/colorPrimary_black"
            android:textSize="12dp"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content"
            android:text="update_at"/>
    </LinearLayout>

</LinearLayout>